
@{
    ViewBag.Title = "HomeView";
}

<div id="page-top" data-spy="scroll" data-target=".navbar-custom" ng-controller="StoreController">
    <!-- Preloader -->
    <div id="preloader">
        <div id="load"></div>
    </div>

    <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="~/Home/" target="_self">
                    <h1>Lê Vy</h1>
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="~/Home/" target="_self">Trang chủ</a></li>
                    <li><a href="about-us.html">Giới thiệu</a></li>
                    <li><a href="~/ClientProduct/" target="_self">Sản phẩm</a></li>
                    <li><a href="contact.html">Liên hệ</a></li>
                    <li><a class="btn btn-primary" href="~/ClientProduct/" target="_self">Đặt nước</a></li>
                    <li>
                        <a class="shopping-cart" href="~/ClientOrder/" target="_self">
                            <i class="icon-cart-outline"></i>
                            <span class="item-number">({{cart.getTotalCount()}})</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Section: intro -->
    <section id="intro" class="intro">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Content/img/bgSlide-01.png" />
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/img/bgSlide-02.png" />
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
                <div class="item">
                    <img src="~/Content/img/bgSlide-03.png" />
                    <div class="carousel-caption">
                        ...
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="info">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <i class="icon-phone icon"></i>
                        <span>Hotline: (0633) 777 989</span>
                    </div>
                    <div class="col-sm-6">
                        <i class="icon-home icon"></i>
                        <span>131 Trần Bình Trọng, Lộc Thanh, Bảo Lộc</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /Section: intro -->

    <section class="ads">
        <div class="container">
            <div class="col-sm-offset-5 text-center">
                <p class="text">Đảm bảo an toàn, sức khỏe của cộng đồng</p>
                <p class="text">Là thành công của chúng tôi</p>
            </div>
        </div>
    </section>

    <section class="video-container container">
        <div class="deco-stack">
            <img class="deco-stack__img deco-stack__img--rotation-1" src="~/Content/media/boxpic1.jpg" alt="Picture 1" />
            <img class="deco-stack__img deco-stack__img--rotation-2" src="~/Content/media/boxpic2.jpg" alt="Picture 2" />
            <img class="deco-stack__img deco-stack__img--rotation-3" src="~/Content/media/boxpic3.jpg" alt="Picture 3" />
        </div>
        <div class="video-wrap">
            <div class="video-inner">
                <video class="video-player" src="~/Content/media/woods.mp4" poster="~/Content/media/woods.jpg" preload="auto">
                    <source src="~/Content/media/woods.webm" type='video/webm; codecs="vp8.0, vorbis"'>
                    <source src="~/Content/media/woods.ogg" type='video/ogg; codecs="theora, vorbis"'>
                    <source src="~/Content/media/woods.mp4" type='video/mp4; codecs="avc1.4D401E, mp4a.40.2"'>
                    <p>Sorry, but your browser does not support this video format.</p>
                </video>
                <button class="action action--close"><i class="fa fa-close icon-close"></i><span class="action__label action__label--hidden">Close preview</span></button>
            </div> <!-- /video-inner -->
        </div><!-- /video-wrap-->
        <div class="content">
            <div class="loader">
                <i class="fa fa-spinner fa-pulse"></i>
            </div>
            <button class="action action--hidden action--play">
                <i class="icon-play"></i><span class="action__label">Watch the video</span>
            </button>
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-2">
                    <p class="footer-title">LÊ VY</p>
                    <ul class="footer-nav">
                        <li><a href="index.html">Trang Chủ</a></li>
                        <li><a href="about-us.html">Giới Thiệu</a></li>
                        <li><a href="product.html">Sản Phẩm</a></li>
                        <li><a href="#">Liên Hệ</a></li>
                        <li class="copy-right">
                            <a class="_blank" href="index.html" target="_blank">
                                © 2017 - LeVy
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-12 col-md-4">
                    <p class="footer-title">Theo dõi chúng tôi</p>
                    <ul class="footer-social">
                        <li><a href="#"><i class="icon icon-facebook"></i></a></li>
                        <li><a href="#"><i class="icon icon-gmail"></i></a></li>
                        <li><a href="#"><i class="icon icon-google"></i></a></li>
                    </ul>
                </div>
                <div class="col-sm-12 col-md-6">
                    <p class="footer-title">Công ty tnhh nước tinh khiết Lê Vy</p>
                    <div class="footer-info">
                        <div>
                            <div class="sub-title">Địa chỉ:</div>
                            <div class="detail">131 Trần Bình Trọng,  Lộc Thanh, Bảo Lộc</div>
                        </div>
                        <div>
                            <div class="sub-title">Hotline:</div>
                            <div class="detail">
                                <p>(0633) 777 989</p>
                                <p>(0633) 76 23 23</p>
                                <p>(0886) 11 51 51</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
@section JavaScript{
    <script src="~/Scripts/angular.js"> </script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/ScriptsNg/StoreController.js"></script>
    <script src="~/ScriptsNg/shoppingCart.js"></script>
    <script src="~/Scripts/angular-growl.js"></script>
    <script src="~/Scripts/classie.js"></script>
    <script src="~/Scripts/video.js"></script>
    <script src="~/Scripts/custom.js"></script>
}
